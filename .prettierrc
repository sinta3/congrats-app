{
    "trailingComma": "none",
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 120,
    "overrides": [
        {
            "files": ["package.json", ".travis.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.mongodb",
            "options": {
              "parser": "babel"
            }
          }
    ]
}
